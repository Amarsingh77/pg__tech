{
  "name": "techinstitute-fullstack",
  "private": true,
  "version": "1.0.0",
  "description": "Full-stack Tech Institute application with React frontend and Node.js backend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "cd server && npm run dev",
